@{
    var UserName = Context.Session.GetString("UserName") as string;
}
<!DOCTYPE html>
<html lang="en">
<Head>
    <link rel="stylesheet" href="~/css/HomePage.css" asp-append-version="true" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotMusic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</Head>

<body>
    <div class="tab-left">
        <ul>
            <li>
                <a asp-action="HomePage1" asp-controller="Home">
                    <img src="~/img/Home.svg" alt="" class="gray-filtered">
                    <span class="text-tab-left">Home</span>
                </a>
            </li>
            <li>
                <a asp-action="Search" asp-controller="Home">
                    <img src="~/img/Search.svg" alt="" class="gray-filtered">
                    <span class="text-tab-left">Search</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <img src="~/img/YourLibrary.svg" alt="" class="gray-filtered">
                    <span class="text-tab-left">Your Library</span>
                </a>
            </li>
        </ul>
    </div>
    <div class="tab-right">
         <div class="top-tab-right">
            <div class="button-top">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-chevron-left btn-previous" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" sheight="20" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z" />
                </svg>
            </div>
            <div class="search-input">
                <form id="myForm" asp-action="SearchResult" asp-controller="Home">
                    <input type="text" placeholder="Bạn muốn nghe gì" id="myInput" name="keyword"
                    value="@ViewData["keyword"]" oninput="submitForm()" />
                </form>
                
                <span id="basic-addon1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
                    </svg>
                </span>
            </div>
            @if (string.IsNullOrEmpty(UserName))
            {
                <div class="login-top-tab">
                    <a class="btn-singup" asp-action="Register" asp-controller="Users">Sign up</a>
                    <a class="btn-login" asp-action="Login" asp-controller="Users">Log in</a>
                </div>
            }
            else
            {
                <div style="float:right;height:20px">
                    <partial name="_MenuPartial" model="@UserName"></partial>
                </div>
                
            } 
            
        </div>
        @RenderBody()
    </div>
    
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>
<script>
    function submitForm(){
        document.getElementById('myForm').submit();
    }
</script>