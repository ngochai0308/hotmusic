
<center>
    <partial name="_AlertMessage" />
    <h2>Trang lấy lại mật khẩu</h2>
    <br />
    <form method="post" asp-action="FogotPassword">
        <div>
            <br />
            <input type="email" style="width:50%" class="form-control" placeholder="Nhập email của bạn" id="email" value="@ViewData["email"]" name="email" required>
        </div>
       
        <br />
        <button type="submit" class="btn btn-primary">Lấy lại mật khẩu</button>
    </form>
</center>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
