@model WebsiteMusic.Models.LoginUserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<head>
<title>Login 07</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<link rel="stylesheet" href="~/css/style.css">

</head>
<body>
<partial name="_AlertMessage" />
<section class="ftco-section" style="padding-top:1em !important">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-10">
            <div class="wrap d-md-flex">
                        <div class="text-wrap p-4 p-lg-5 text-center d-flex align-items-center order-md-last backimg">
                    <div class="text w-100">
                        <h2>Chào mừng đến trang đăng nhập</h2>
                        <p>Bạn chưa có tài khoản?</p>
                        <a asp-action="Register" asp-controller="Users" class="btn btn-white btn-outline-white">Đăng kí</a>
                    </div>
            </div>
                <div class="login-wrap p-4 p-lg-5">
                <div class="d-flex">
                    <div class="w-100">
                        <h3 class="mb-4">Đăng nhập</h3>
                    </div>
                        <div class="w-100">
                            <p class="social-media d-flex justify-content-end">
                                <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                            </p>
                        </div>
                </div>
                    <form asp-action="login" method="post" class="signin-form">
                    <div class="form-group mb-3">
                        <label class="label" asp-for="UserName"></label>
                        <input id="userNameInput" type="text" class="form-control" asp-for="UserName" placeholder="Username" required>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
            <div class="form-group mb-3">
                        <label class="label" asp-for="Password"></label>
                        <input id="passwordInput" type="password" class="form-control" asp-for="Password" placeholder="Password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="form-control btn btn-primary submit px-3">Đăng nhập</button>
            </div>
            <div class="form-group d-md-flex">
                <div class="w-50 text-left">
                    <label asp-for="IsRememberMe" class="fw-bold"></label>
                    <input type="checkbox" asp-for="IsRememberMe" checked />
                </div>
                <div class="w-50 text-md-right">
                   <a asp-action="FogotPassword">Quên mật khẩu</a>
                </div>
            </div>
            </form>
        </div>
        </div>
        </div>
    </div>
</div>
</section>
    <script>
        // Lấy giá trị của cookie
        var cookieValueUser = document.cookie.replace(/(?:(?:^|.*;\s*)UserName\s*\=\s*([^;]*).*$)|^.*$/, "$1");
        var cookieValuePassword = document.cookie.replace(/(?:(?:^|.*;\s*)Password\s*\=\s*([^;]*).*$)|^.*$/, "$1");

        // Gán giá trị của cookie cho thuộc tính value của input
        document.getElementById('userNameInput').value = cookieValueUser;
        document.getElementById('passwordInput').value = cookieValuePassword;
    </script>
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
