@model HotMusic.Models.LyricDisplayViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Lyric</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" /> 
            <div class="form-group">
                <label asp-for="SongTitle" class="control-label"></label>
                <select asp-for="SongId" asp-items="@ViewBag.ListSong" class="form-control"></select>
                <span asp-validation-for="SongId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lyricc" class="control-label"></label>
                <textarea asp-for="lyricc" class="form-control" ></textarea>
                <span asp-validation-for="lyricc" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" asp-route-id="@Model.Id" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

