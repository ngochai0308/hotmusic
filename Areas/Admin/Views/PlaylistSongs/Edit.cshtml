@model HotMusic.Models.PlaylistSongViewModel

@{
    ViewData["Title"] = "Cập nhật danh sách bài hát";
}

<h4>Cập nhật danh sách bài hát</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SongId" />
            <input type="hidden" asp-for="PlaylistId" />
            <div class="form-group">
                <label asp-for="PlaylistName" class="control-label"></label>
                <input asp-for="PlaylistName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SongName" class="control-label"></label>
                <input asp-for="SongName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
