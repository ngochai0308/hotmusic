@model HotMusic.Models.SongViewModel

@{
    ViewData["Title"] = "Xóa bài hát";
}

<h1>Delete</h1>

<h3>Bạn chắc chắn muốn xóa bài hát này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SongTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SongTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtistId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ViewCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViewCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SongUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SongUrl)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SongId" />
        <input type="submit" value="Xóa" class="btn btn-danger" asp-route-id="@Model.SongId" /> |
        <a asp-action="Index">Trở lại danh sách</a>
    </form>
</div>
